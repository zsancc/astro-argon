---

import { globalConfig, profileConfig } from "../config";
import { url } from "../utils/url-utils";

const currentYear = new Date().getFullYear();
---

<div class="transition border-t border-(--border-divider) my-10 border-dashed mx-32"></div>
<div class="transition border-dashed border-(--border-divider) rounded-2xl mb-12 flex flex-col items-center justify-center px-6">
    <div class="transition text-50 text-sm text-center">
        &copy; <span id="copyright-year">{currentYear}</span> {profileConfig.name}. All Rights Reserved. /
        <a class="transition link text-(--primary) font-medium" target="_blank" href={url('rss.xml')}>RSS</a> /
        <a class="transition link text-(--primary) font-medium" target="_blank" href={url('sitemap-index.xml')}>Sitemap</a><br>
        Powered by
        <a class="transition link text-(--primary) font-medium" target="_blank" href="https://astro.build">Astro</a> &
        <a class="transition link text-(--primary) font-medium" target="_blank" href={globalConfig.repoUrl}>{globalConfig.repoName}</a>
    </div>
</div>

