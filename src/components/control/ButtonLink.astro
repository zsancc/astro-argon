---
interface Props {
	badge?: string;
	url?: string;
	label?: string;
}
const { badge, url, label } = Astro.props;
const hasBadge = badge !== undefined && badge !== null && badge !== "";
---
<a href={url} aria-label={label}
   class="btn normal-case w-full h-10 min-h-10 rounded-lg px-2 justify-between border-none shadow-none transition-all text-[0.84rem] font-medium
        bg-(--surface-soft)/62 hover:bg-(--surface-soft-hover) active:bg-(--surface-soft-active)
        text-75 hover:text-90"
>
        <div class="min-w-0 overflow-hidden text-left whitespace-nowrap text-ellipsis">
            <slot></slot>
        </div>
        {hasBadge &&
            <div class="badge badge-sm ml-4 min-w-[2rem] px-2 h-7 text-[0.78rem] font-semibold border-none
                text-50 bg-(--surface-soft)"
            >
                { badge }
            </div>
        }

</a>
