---
import License from "@components/misc/License.astro";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "@i18n/i18nKey";
import { i18n } from "@i18n/translation";
import MainGridLayout from "@layouts/MainGridLayout.astro";
import { getSortedPosts, postIdToSlug } from "@utils/content-utils";
import { hasMathInMarkdown } from "@utils/math-utils";
import { getCategoryUrl, getDir, getPostUrlBySlug } from "@utils/url-utils";
import { Icon } from "astro-icon/components";
import { render } from "astro:content";
import { licenseConfig } from "src/config";
import ImageWrapper from "../../components/misc/ImageWrapper.astro";
import { profileConfig, siteConfig } from "../../config";
import { formatDateToYYYYMMDD } from "../../utils/date-utils";

export async function getStaticPaths() {
	const blogEntries = await getSortedPosts();
	return blogEntries.map((entry) => ({
		params: { slug: postIdToSlug(entry.id) },
		props: { entry },
	}));
}

const { entry } = Astro.props;
const { Content, headings, remarkPluginFrontmatter } = await render(entry);
const hasMath = hasMathInMarkdown(entry.body);
const postIdDir = getDir(entry.id);
const postBasePath = entry.filePath
	? getDir(entry.filePath.replace(/\\/g, "/")).replace(/^src\//, "")
	: postIdDir === "/"
		? "content/posts/"
		: `content/posts/${postIdDir}`;

const jsonLd = {
	"@context": "https://schema.org",
	"@type": "BlogPosting",
	headline: entry.data.title,
	description: entry.data.description || entry.data.title,
	keywords: entry.data.tags,
	author: {
		"@type": "Person",
		name: profileConfig.name,
		url: Astro.site,
	},
	datePublished: formatDateToYYYYMMDD(entry.data.published),
	inLanguage: entry.data.lang
		? entry.data.lang.replace("_", "-")
		: siteConfig.lang.replace("_", "-"),
};

if (
	entry.data.image &&
	(entry.data.image.startsWith("https://") || entry.data.image.startsWith("http://"))
) {
	(jsonLd as Record<string, unknown>).image = entry.data.image;
}
---
<MainGridLayout banner={entry.data.image} title={entry.data.title} description={entry.data.description} lang={entry.data.lang} setOGTypeArticle={true} hasMath={hasMath} headings={headings}>
    <script is:inline slot="head" type="application/ld+json" set:html={JSON.stringify(jsonLd)}></script>
    <div class="post-page-shell">
        <div id="post-container" class="card card-compact post-page-card">
            <!-- title -->
            <div class="post-page-title-wrap onload-animation">
                <div
                    data-pagefind-body data-pagefind-weight="10" data-pagefind-meta="title"
                    class="post-page-title">
                    {entry.data.title}
                </div>
            </div>

            <!-- metadata -->
            <div class="post-page-meta-wrap onload-animation">
                <div class="post-page-meta-row">
                    <span class="post-page-meta-item">
                        <Icon name="material-symbols:calendar-today-outline-rounded" class="text-[1rem]"></Icon>
                        {formatDateToYYYYMMDD(entry.data.published)}
                    </span>
                    <span class="post-page-meta-sep">|</span>
                    <span class="post-page-meta-item">
                        <Icon name="material-symbols:notes-rounded" class="text-[1rem]"></Icon>
                        {remarkPluginFrontmatter.words} {i18n(remarkPluginFrontmatter.words === 1 ? I18nKey.wordCount : I18nKey.wordsCount)}
                    </span>
                    <span class="post-page-meta-sep">|</span>
                    <span class="post-page-meta-item">
                        <Icon name="material-symbols:schedule-outline-rounded" class="text-[1rem]"></Icon>
                        {remarkPluginFrontmatter.minutes} {i18n(remarkPluginFrontmatter.minutes === 1 ? I18nKey.minuteCount : I18nKey.minutesCount)}
                    </span>
                    {entry.data.category && (
                        <>
                            <span class="post-page-meta-sep">|</span>
                            <a
                                href={getCategoryUrl(entry.data.category)}
                                class="badge badge-sm post-page-category-badge"
                            >
                                {entry.data.category.trim()}
                            </a>
                        </>
                    )}
                </div>
                <div class="post-page-divider"></div>
            </div>

            <!-- always show cover as long as it has one -->

            {entry.data.image &&
                <ImageWrapper id="post-cover" src={entry.data.image} basePath={postBasePath} class="post-page-cover banner-container onload-animation"/>
            }


            <Markdown class="post-page-markdown markdown-content onload-animation">
                <Content />
            </Markdown>

            {licenseConfig.enable && <License title={entry.data.title} slug={postIdToSlug(entry.id)} pubDate={entry.data.published} class="post-page-license license-container onload-animation"></License>}

        </div>
    </div>

    <div class="post-page-nav">
        <a href={entry.data.nextSlug ? getPostUrlBySlug(entry.data.nextSlug) : "#"}
           class:list={["post-page-nav-link", {"pointer-events-none": !entry.data.nextSlug}]}>
            {entry.data.nextSlug && <div class:list={["btn", "btn-ghost", "post-page-nav-btn", "post-page-nav-prev"]}>
                <Icon name="material-symbols:chevron-left-rounded" class="post-page-nav-icon" />
                <div class="post-page-nav-title">
                    {entry.data.nextTitle}
                </div>
            </div>}
        </a>

        <a href={entry.data.prevSlug ? getPostUrlBySlug(entry.data.prevSlug) : "#"}
           class:list={["post-page-nav-link", {"pointer-events-none": !entry.data.prevSlug}]}>
            {entry.data.prevSlug && <div class:list={["btn", "btn-ghost", "post-page-nav-btn", "post-page-nav-next"]}>
                <div class="post-page-nav-title">
                    {entry.data.prevTitle}
                </div>
                <Icon name="material-symbols:chevron-right-rounded" class="post-page-nav-icon" />
            </div>}
        </a>
    </div>

</MainGridLayout>

